<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.isteyft.mapper.UserMapper">

    <insert id="RegByUsernameAndPassword">
        insert into tb_user(username, password)
        values (#{username}, #{password})
    </insert>
    <select id="getByUsernameAndPassword" resultType="com.isteyft.pojo.User">
        select * from tb_user where username = #{username} and password = #{password}
    </select>
    <select id="getPerssion" resultType="java.lang.String">
        select permission from tb_per where username = #{username}
    </select>
</mapper>